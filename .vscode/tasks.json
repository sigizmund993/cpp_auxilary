{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "Build Python module with pybind11",
        "command": "/usr/bin/g++",
        "args": [
          "-O3",
          "-Wall",
          "-shared",
          "-std=c++17",
          "-fPIC",
  
          // 🔽 Путь к заголовкам Python
          "-I/usr/include/python3.10",      // <-- Укажи свою версию Python
  
          // 🔽 Путь к заголовкам pybind11
          "-I/home/gmalyshev/.local/lib/python3.10/site-packages/pybind11/include",
  
          "${file}",
          "-o",
          "${fileDirname}/mymodule$(shell python3-config --extension-suffix)"  // имя выходного файла
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Builds a Python extension module using pybind11."
      }
    ]
  }
  